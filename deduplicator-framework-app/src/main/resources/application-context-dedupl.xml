<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="application-context.xml"/>

	<!-- This defines a LuceneDeduplicator, and passes in some Lucene-specific object
		references (defined above) and the de-duplication configuration ("config").
		Note that the deduplicator depends on the dataLoader. This means that
		the dataLoader class is instantiated and any initialisation is done *before*
		the instantiation of this class. -->
	<bean id="engine" class="org.kew.shs.dedupl.lucene.LuceneDeduplicator"
		p:dataLoader-ref="dataLoader"
		p:luceneVersion-ref="LUCENE_VERSION"
		p:indexWriter-ref="indexWriter"
		p:analyzer-ref="luceneAnalyzer"
		p:directory-ref="luceneFileSystemStore"
		p:queryParser-ref="queryParser"
		p:configuration-ref="config"/>

</beans>
